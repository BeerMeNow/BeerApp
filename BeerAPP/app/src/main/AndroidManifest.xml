            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Favorites"
            android:label="Favorites" >

        </activity>
        <activity
            android:name=".BeerOfTheWeek"
            android:label="BeerOfWeek" >

        </activity>
        <activity
            android:name=".SurpriseMe"
            android:label="Surprise!" >

        </activity>

        <activity
            android:name=".Search"
            android:label="Search" >

        </activity>
        <activity
            android:name=".BeerDisplay"
            android:label="BeerDisplay" >

        </activity>

        <activity
            android:name=".Recommended"
            android:label="Recommended" >

        </activity>
    </application>

</manifest>
