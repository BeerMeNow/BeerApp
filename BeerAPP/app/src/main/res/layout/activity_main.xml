<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/featuredbg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beer Me Now"
        android:textSize="45sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/title"
        android:paddingBottom="20sp"/>


    <GridLayout
        android:layout_below="@id/title"
        android:id="@+id/numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="5"
        android:layout_centerHorizontal="true"
        android:useDefaultMargins="false"
        >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="70sp"
            android:textSize="25sp"
            android:id="@+id/search"
            android:textAlignment="center"
            android:background="@drawable/searchbeer"
            android:text=""
            android:gravity="center"
            android:clickable="false"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="70sp"
            android:textSize="25sp"
            android:id="@+id/favorites"
            android:textAlignment="center"
            android:background="@drawable/favoritesbeer"
            android:text=""
            android:gravity="center"
            android:clickable="false"
            />


        <Button
            android:layout_width="fill_parent"
            android:layout_height="70sp"
            android:textSize="25sp"
            android:id="@+id/nearMe"
            android:textAlignment="center"
            android:background="@drawable/nearmebeer"
            android:text=""
            android:gravity="center"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="70sp"
            android:textSize="25sp"
            android:id="@+id/surpiseMe"
            android:background="@drawable/surprisebeer"
            android:text=""
            android:gravity="center"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="70sp"
            android:textSize="25sp"
            android:id="@+id/beerOfTheWeek"
            android:background="@drawable/botwbeer"
            android:text=""
            android:gravity="center"
            />

    </GridLayout>

</RelativeLayout>
